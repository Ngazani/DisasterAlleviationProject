@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Categories.Purchases.Capture_PurchaseModel
@{
}

<br />
<h1> Capture Purchase</h1>

@if (Model.err.Length > 0)
{
    <div class=" alert alert-warning alert-danger fade show" role="alert">
        <strong>@Model.err</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Item Name:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="item" value="@Model.purchase.item" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Quantity:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="quantity" value="@Model.purchase.quantity" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category:</label>
        <div class="col-sm-6">
            <select class="form-select" aria-label="Default select example" name="category">
                <option selected>Select Category</option>
                <option value="Non-Perishable Foods">Non Perishable Foods</option>
                <option value="Clothes">Clothes</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="price" value="@Model.purchase.price" />
        </div>
    </div>

    @if (Model.succ.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class=" alert alert-success  fade show" role="alert">
                    <strong>@Model.succ</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-warning">Capture Purchase</button>
        </div>

        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-warning" asp-page="Index" role="button">Back To List</a>
        </div>
</form>

