@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Categories.Purchases.AllocateMoneyModel
@{
}

<br />
<h> Allocate Money</h></h1>

@if (Model.err.Length > 0)
{
    <div class=" alert alert-warning alert-danger fade show" role="alert">
        <strong>@Model.err</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Amount:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="amount" value="@Model.allocatem.amount" />
        </div>
    </div>




    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Disaster Name:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="disaster" value="@Model.allocatem.disaster" />
        </div>
    </div>

    @if (Model.succ.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class=" alert alert-success  fade show" role="alert">
                    <strong>@Model.succ</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-warning">Allocate Funds</button>
        </div>

        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-warning" asp-page="Index" role="button">Back To List</a>
        </div>
</form>



<br>
<h1>List Of Allocations</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Amount</th>
           
            <th>Disaster Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.mallocations)
        {
            <tr>
                <td>@row.id</td>
                <td>@row.amount</td>
         
                <td>@row.disaster</td>

                <td><a class="btn btn-warning btn-sm" href="Users/Edit?id=@row.id">Modify Donation</a></td>
            </tr>
        }
    </tbody>
</table>


