@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Categories.Purchases.IndexModel
@{
}

<br>
<h1>List Of Purchases</h1>
<a class="btn btn-warning btn-sm" href='Purchases/Capture_Purchase'>Capture Item Purchase</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.displayPurchases)
        {
            <tr>
                <td>@row.id</td>
                <td>@row.item</td>
                <td>@row.quantity</td>
                <td>@row.category</td>
                <td>@row.price</td>
   
                <td><a class="btn btn-warning btn-sm" href="Users/Edit?id=@row.id">Modify Donation</a></td>
            </tr>
        }
    </tbody>
</table>

