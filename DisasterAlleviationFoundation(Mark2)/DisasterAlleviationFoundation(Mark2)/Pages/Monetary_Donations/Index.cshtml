@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Monetary_Donations.IndexModel
@{
}

<br>
<h1>List Of Donations</h1>
<a class="btn btn-warning btn-sm" href='Monetary_Donations/Capture_Donation'>Capture Monetary Donation</a>
<h3>Total Monetary Donations Recieved: R @Pages.Monetary_Donations.monetary.total</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Donor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.displayMoney)
        {
            <tr>
                <td>@row.id</td>
                <td>@row.date</td>
                <td>@row.amount</td>
                <td>@row.donor</td>
                <td><a class="btn btn-warning btn-sm" href="Users/Edit?id=@row.id">Modify Donation</a></td>
            </tr>
        }
    </tbody>
</table>