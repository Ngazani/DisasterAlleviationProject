@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Categories.IndexModel
@{
}

<br />
<h1> Add New Category</h1>

@if (Model.err.Length > 0)
{
    <div class=" alert alert-warning alert-danger fade show" role="alert">
        <strong>@Model.err</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category Name:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.cat.name" />
        </div>
    </div>

    @if (Model.succ.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class=" alert alert-success  fade show" role="alert">
                    <strong>@Model.succ</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-warning">Add Category</button>
        </div>
    </div>

</form>

