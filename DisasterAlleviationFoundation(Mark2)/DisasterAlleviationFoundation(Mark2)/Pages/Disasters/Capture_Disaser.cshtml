@page
@model DisasterAlleviationFoundation_Mark2_.Pages.Disasters.Capture_DisaserModel
@{
}

<br />
<h1> Capture Disaster Information</h1>

@if (Model.err.Length > 0)
{
    <div class=" alert alert-warning alert-danger fade show" role="alert">
        <strong>@Model.err</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Start Date:</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="start" value="@Model.disaster.start" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">End Date:</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="end" value="@Model.disaster.end" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="location" value="@Model.disaster.location" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.disaster.description" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Aid Type:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="aid" value="@Model.disaster.aid" />
        </div>
    </div>

    @if (Model.succ.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class=" alert alert-success  fade show" role="alert">
                    <strong>@Model.succ</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-warning">Capture Disaster</button>
        </div>

        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-warning" asp-page="Index" role="button">Back To List</a>
        </div>
</form>

